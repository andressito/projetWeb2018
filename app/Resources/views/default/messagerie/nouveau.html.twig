
{% extends 'base1.html.twig' %}

{% block body %}
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
      
      </div>
      <div class="col-lg-6">
        {% if array.erreurCon is defined %}
        <div class="alert alert-danger">
          <strong>Attention!</strong> <b> {{ array.erreurCon }} </b>
        </div>
        {% endif %}
      </div>
      <div class="col-lg-3">

      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="{{url('/nouveau')}}">Nouveau Message</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{url('/recu')}}">Messages Reçus  {% if nbmsgNonlu>0 %}<span class="badge">{{nbmsgNonlu}}{% endif %}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{url('/envoye')}}">Messages Envoyés</a>
            </li>
          </ul> 
      </div>
      <div class="col-lg-6 login-sec">
        <h2 class="text-center">Nouveau Message</h2>
        {% if message is defined %}
          {{form_start(message)}}
            <div class="form-group">
              <label for="destinataire" class="text-uppercase"> destinataire</label>
              {{form_widget(message.id_destinataire,{'attr': {'class':'form-control input-lg'}})}}
            </div>
            <div class="form-group">
              <label for="objet" class="text-uppercase"> objet</label>
              {{form_widget(message.objet,{'attr': {'class':'form-control input-lg'}})}}
            </div>
            <div class="form-group">
              <label for="msg" class="text-uppercase"> message</label>
              {{form_widget(message.msg,{'attr': {'class':'form-control input-lg'}})}}
            </div>
            {{ form_widget(message.save, {'attr': {'class':'btn btn-login float-right'}}) }}
          {{form_end(message)}}
        {% endif %}
        {% if messageTo is defined %}
        <div class="alert alert-warning">
          <strong>Message pour :</strong> <b> {{ array.iddes }} </b>
        </div>
          {{form_start(messageTo)}}
            <div class="form-group">
              <label for="objet" class="text-uppercase"> objet</label>
              {{form_widget(messageTo.objet,{'attr': {'class':'form-control input-lg'}})}}
            </div>
            <div class="form-group">
              <label for="msg" class="text-uppercase"> message</label>
              {{form_widget(messageTo.msg,{'attr': {'class':'form-control input-lg'}})}}
            </div>
            {{ form_widget(messageTo.save, {'attr': {'class':'btn btn-login float-right'}}) }}
          {{form_end(messageTo)}}
        {% endif %}
      </div>
      <div class="col-lg-3">

      </div>
    </div>
  </div>
</div>

{% endblock %}
