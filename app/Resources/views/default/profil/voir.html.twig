{% extends 'base1.html.twig' %}
{% block body %}
	<div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-5">
          <h2 class="text-center"> Détails du Profil</h2>
          {% if array.vote is defined %}
            <div class="alert alert-warning">
              <b> {{array.vote}} </b>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="row">
        <div class="col-lg-2">
          {% if array.res is defined %}
            <div class="alert alert-warning">
              <strong>Note: </strong> <b> <span class="badge badge-secondary">{{array.res}}</span></b>
            </div>
          {% endif %}
          <div>
            <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" href="{{ path('/nouveau', {'url': user.login}) }}">Envoyez   <br>un message<br>à {{user.login}}</a>
          </div>
          {% if user.photo is not null %}
           <img class="img-thumbnail" src="{{ asset(user.photo) }}"  width="100" height="100" />
          {% endif %}
          
        </div>
        <div class="col-lg-5">
            <div class="alert alert-warning">
              <strong>Prénom: </strong> <b> {% if user.prenom is not null %}{{user.prenom}}{% endif %} </b>
            </div>
          
          
            <div class="alert alert-warning">
              <strong>Nom: </strong> <b> {% if user.nom is not null %}{{user.nom}} {% endif %}</b>
            </div>
          
          
            <div class="alert alert-warning">
              <strong>Email: </strong> <b> {% if user.email is not null %}{{user.email}} {% endif %}</b>
            </div>
          
         
            <div class="alert alert-warning">
              <strong>Numéro de téléphone: </strong> <b> {% if user.tel is not null %} {{user.tel}} {% endif %}</b>
            </div>
          
            <div class="alert alert-warning">
              <strong>Description: </strong> <b>{% if user.description is not null %} {{user.description}} {% endif %}</b>
            </div>
        </div>
        <div class="col-lg-5 login-sec">
          {% if form is defined %}
            <h2 class="text-center"> Notez ce profil </h2>
            <div class="form-group">
              {{form_start(form)}}
                <div class="form-group">
                  <label for="note" class="text-uppercase">note</label>
                  {{form_widget(form.note,{'attr': {'class':'form-control input-lg'}})}}
                </div>
                <div class="form-group">
                  <label for="note" class="text-uppercase">commentaire</label>
                  {{form_widget(form.commentaire,{'attr': {'class':'form-control input-lg'}})}}
                </div>
                {{ form_widget(form.save, {'attr': {'class':'btn btn-login float-right'}}) }}
              {{form_end(form)}}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div> 
   
{% endblock %}
