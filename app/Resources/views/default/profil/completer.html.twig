{% extends 'base1.html.twig' %}
{% block body %}
	<div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
        </div>
        <div class="col-lg-3">

        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6 login-sec">
          <h2 class="text-center"> Modifier Profil </h2>
          <div class="form-group">
            {{form_start(form)}}
              <div class="form-group">
                <label for="nom" class="text-uppercase">nom</label>
                {{form_widget(form.nom,{'attr': {'class':'form-control input-lg'}})}}
              </div>
              <div class="form-group">
                <label for="prenom" class="text-uppercase">prénom</label>
                {{form_widget(form.prenom,{'attr': {'class':'form-control input-lg'}})}}
              </div>
              <div class="form-group">
                <label for="email" class="text-uppercase">email</label>
                {{form_widget(form.email,{'attr': {'class':'form-control input-lg'}})}}
              </div>
              <div class="form-group">
                <label for="tel" class="text-uppercase">numéro de téléphone</label>
                {{form_widget(form.tel,{'attr': {'class':'form-control input-lg'}})}}
              </div>
              <div class="form-group">
                <label for="description" class="text-uppercase">description</label>
                {{form_widget(form.description,{'attr': {'class':'form-control input-lg'}})}}
              </div>
              {{ form_widget(form.save, {'attr': {'class':'btn btn-login float-right'}}) }}
            {{form_end(form)}}
          </div>
        </div>
        <div class="col-lg-3">

        </div>
      </div>
    </div>
  </div>
{% endblock %}
