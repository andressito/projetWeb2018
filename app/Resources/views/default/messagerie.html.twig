	{% extends 'base1.html.twig' %}
	{% block body %}
	<div class="jumbotron">
		<div class="container">
			<div class="row">
				<div class="col-lg-3">
				
				</div>
				<div class="col-lg-6">
					{% if array.ok is defined %}
					<div class="alert alert-success">
						<strong>Success!</strong> <b> {{ array.ok }} </b>
					</div>
					{% endif %}
				</div>
				<div class="col-lg-3">

				</div>
			</div>
			<div class="row">
				<div class="col-lg-3">
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" href="{{url('/nouveau')}}">Nouveau Message</span></a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{url('/recu')}}">Messages Reçus  
								{% if nbmsgNonlu>0 %}
									<span class="badge">
									{{nbmsgNonlu}}
								{% endif %}
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{url('/envoye')}}">Messages Envoyés</a>
						</li>
						</ul> 
					</div>
					<div class="col-lg-6">
						{% if msg is defined %}
						<div class="alert alert-danger">
							<strong>Objet: </strong>  {{msg.objet}}  <br>
							<strong>Message: </strong> {{msg.msg}}  <br>
							<strong>Envoyé à:</strong>  <a href="{{ path('/profil', {'url': userDestinataire}) }}">{{userDestinataire}}</a>
						</div>	
						{% endif %}
					</div>
					<div class="col-lg-3">

					</div>
				</div>
			</div>
		</div>
		{% endblock%}