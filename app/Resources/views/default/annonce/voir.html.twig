{% extends 'base1.html.twig' %}

{% block body %}
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
        </div>
        <div class="col-lg-3">

        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">
          {% if annonces is defined %}
            
              <h2 class="text-center"> Liste des Annonces </h2>
           
            
              {% for ques in annonces %}
                <div class="alert alert-danger">
                  <strong>{{ ques.titre }}</strong> -
                   <a href="{{ path('/annonce/voir', {'url': ques.url}) }}">{{ques.url}}</a> Disponible à partir du {{ques.dateDisponibilite|date('d-m-Y')}}
                </div>
              {% endfor %}
          {% endif %}
          {% if ann is defined %}
            <h2 class="text-center"> Details de l'annonce </h2>
            {% if ann.photo1 is not null %}
              <div class="text-center">
                <img  src="{{ asset(ann.photo1) }}" class="rounded" width="300" height="300" />
              </div>
            {% endif %}
            <div class="alert alert-danger">
              <strong>Titre: </strong> {{ ann.titre }} 
            </div>
            <div class="alert alert-danger">
              <strong>Description: </strong> {{ ann.description }}
            </div>
            <div class="alert alert-danger">
              <strong>Prix: </strong> {{ ann.prix }}€
            </div>
            <div class="alert alert-danger">
              <strong>Date de disponibilité: </strong> {{ann.dateDisponibilite|date('d-m-Y')}} 
            </div>
            <div class="alert alert-danger">
              <strong>Publié par: </strong> <a href="{{ path('/profil', {'url': user.login}) }}">{{user.login}}</a>
            </div>
          {% endif %}
        </div>
          
        <div class="col-lg-3">

        </div>
      </div>
    </div>
  </div>
{% endblock %}